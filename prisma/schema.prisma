datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  deletedAt     DateTime?
  passwordHash  String?

  sex        String?
  age        Int?
  heightCm   Float?
  weightKg   Float?

  accounts      Account[]
  sessions      Session[]
  actionTokens  ActionToken[] @relation("UserActionTokens")

  meals         Meal[]
  recipes       Recipe[]
  metrics       Metric[]
  goal          Goal?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ActionToken {
  id        String    @id @default(cuid())
  userId    String
  action    String
  tokenHash String    @unique
  payload   String?
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation("UserActionTokens", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Product {
  id         String   @id @default(cuid())
  name       String
  nameKey    String   @unique
  brand      String? 
  servingQty Float    @default(100)
  kcal       Float
  protein    Float    @default(0)
  carbs      Float    @default(0)
  fat        Float    @default(0)
  createdAt  DateTime @default(now())
  imageUrl String?

  @@index([name])
}

model Meal {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  time      DateTime
  mealType  MealType

  itemsJson Json
  kcal      Float    @default(0)
  protein   Float    @default(0)
  carbs     Float    @default(0)
  fat       Float    @default(0)
  isPlan    Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, date, mealType])
}

model Recipe {
  id         String   @id @default(cuid())
  userId     String
  name       String
  itemsJson  Json
  totalKcal  Float  @default(0)
  totalP     Float  @default(0)
  totalC     Float  @default(0)
  totalF     Float  @default(0)
  servings   Int    @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, name])
}

model Metric {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime  // date (UTC 00:00)
  weightKg  Float?
  steps     Int?
  hrRest    Int?      // optional
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model Goal {
  id              String   @id @default(cuid())
  userId          String
  weightCurrent   Float?
  weightTarget    Float?
  kcalTarget Float?
  proteinTarget   Float?
  carbsTarget     Float?
  fatTarget       Float?
  activityLevel   String?
  deadline        DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}